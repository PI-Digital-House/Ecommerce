<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/794f38cff9.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@100;700&display=swap" rel="stylesheet">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <link rel="stylesheet" href="login.css">
    <script src="cadastro.js" defer></script>
    <title>Cadastro</title>
</head>
<body>
    <nav>
        <ul>
            <li>
                <img src="img/Logo.png" id='logo' alt="Logo">
            </li>
            <li>
                <input id="buscar" type="text"  placeholder="Buscar..."/>
                <input id="botao" type="submit" value="Ir"/>
                <label for="lupa" class="lupa">
                  <i class="fa-solid fa-magnifying-glass"></i>
              </label>
            </li>
            <li>
                <i class="fa-solid fa-user"></i>
            </li>
            <li>
                <i class="fa-solid fa-cart-shopping"></i>
            </li>
        </ul>
    </nav>
    <main>
        <div class="id">
                <i class="fa-solid fa-user"></i>
                <h1>Identificação</h1>
        </div>
        <div class="margin">
                <div class="separacao">
                    <section class="personalData">
                        <h2>Dados Pessoais</h2>
                        <div class="name">
                            <div class="nameID">
                            <div class="inputForm">
                                <input type="text"  id="inputName" value placeholder="Nome">
                            </div>
                            </div>
                            <div class="senha">
                                <div class="inputForm">
                                    <select name="gender" id="genderSelector">
                                        <option value="op1">Feminino</option>
                                        <option value="op2">Masculino</option>
                                        <option value="op3">Prefiro não informar</option>
                                    </select>
                                </div>
                            </div>
                            <div id="birthday">
                          <div class="inputForm">
                            <input type="date" id="inputBirthday" value placeholder="Data de Nascimento">
                          </div>
                            </div>
                            <div id="phone">
                                <div class="inputForm">
                                    <input type="tel" id="phone" value placeholder="Telefone">
                                </div>
                            </div>
                        </div>
                    </section>
        <div class="divisoria"></div>
        
        <section id="endereco" class="enderecoCadastro">
            <h2>Endereço de Cadastro</h2>
            <div class="preForm">
                <div class="inputForm">
                    <div class="endereco">
                    <input type="text" value placeholder="CEP">
                    </div>
                </div>
                    <div class="inputForm">
                        <input type="text" value placeholder="Endereço">
                    </div>
                </div>
            <div class="number">
                <div class="inputForm">
                    <div class="number">
                        <input type="number" value placeholder="Número">
                        <input type="text" value placeholder="Complemento">
                    </div>                    
                </div>
            </div>
            <div class="district">
                <div class="inputform">
                    <input type="text" value placeholder="Bairo">
                </div>
            </div>
            <div id="city">
            <div class="inputForm">
                <div class="city">
                    <input type="text" value placeholder="Cidade">
                    <input type="text" value placeholder="Estado">
                </div>
            </div>
            </div>
        </div>
        </section>
        
    </div>
    <div id="registration">
        <button id="registrationButton" class="registrationButton">
            <i class="fa-solid fa-address-card"></i>
            <p>Cadastre-se</p>
        </button>
    </div>
    </main>
    <footer>

    </footer>
</body>
</html>